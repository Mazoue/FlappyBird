@using FlappyBird.Models
<div class="pipe top" style="@TopPipeCss"></div>
<div class="pipe" style="@BottomPipeCss"></div>
@code {
    [Parameter] public PipeModel Model { get; set; }

    string TopPipeCss =>
        $"bottom: {Model.DistanceFromBottom + 430}px; left: {Model.DistanceFromLeft}px";
    string BottomPipeCss =>
        $"bottom: {Model.DistanceFromBottom}px; left: {Model.DistanceFromLeft}px";
    protected override void OnParametersSet()
    {
        Model.PropertyChanged += (o, e) => StateHasChanged();
    }
}